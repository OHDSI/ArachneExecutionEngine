                    <version>${bigquery.version}</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-install-plugin</artifactId>
                        <version>2.5.2</version>
                        <executions>
                            <execution>
                                <id>google-api-client</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <groupId>com.google.api-client</groupId>
                                    <artifactId>google-api-client</artifactId>
                                    <version>${bigquery.version}</version>
                                    <packaging>jar</packaging>
                                    <file>${bigquery.classpath}/google-api-client-${bigquery.version}.jar</file>
                                </configuration>
                            </execution>
                            <execution>
                                <id>google-api-services-bigquery</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <groupId>com.google.apis</groupId>
                                    <artifactId>google-api-services-bigquery</artifactId>
                                    <version>${bigquery.version}</version>
                                    <packaging>jar</packaging>
                                    <file>${bigquery.classpath}/google-api-services-bigquery-${bigquery.api.version}.jar</file>
                                </configuration>
                            </execution>
                            <execution>
                                <id>google-cloud-bigquery</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <groupId>com.google.cloud</groupId>
                                    <artifactId>google-cloud-bigquery</artifactId>
                                    <version>${bigquery.version}</version>
                                    <packaging>jar</packaging>
                                    <file>${bigquery.classpath}/GoogleBigQueryJDBC42.jar</file>
                                </configuration>
                            </execution>
                            <execution>
                                <id>google-http-client</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <groupId>com.google.http-client</groupId>
                                    <artifactId>google-http-client</artifactId>
                                    <version>${bigquery.version}</version>
                                    <packaging>jar</packaging>
                                    <file>${bigquery.classpath}/google-http-client-${bigquery.version}.jar</file>
                                </configuration>
                            </execution>
                            <execution>
                                <id>google-http-client-jackson2</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <groupId>com.google.http-client</groupId>
