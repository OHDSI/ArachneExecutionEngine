                                    <artifactId>ImpalaJDBC42</artifactId>
                                    <version>${impala.driver.version}</version>
                                    <packaging>jar</packaging>
                                    <file>${impala.classpath}/ImpalaJDBC42.jar</file>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
