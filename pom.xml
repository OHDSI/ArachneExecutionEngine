        <profile>
            <id>bigquery</id>
            <properties>
                <bigquery.enabled>true</bigquery.enabled>
                <bigquery.version>1.28.0</bigquery.version>
                <bigquery.api.version>v2-rev426-1.25.0</bigquery.api.version>
                <!-- BigQuery JDBC driver path -->
                <bigquery.classpath>/bigquery</bigquery.classpath>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.google.api-client</groupId>
                    <artifactId>google-api-client</artifactId>
                    <version>${bigquery.version}</version>
                </dependency>
                <dependency>
                    <groupId>com.google.apis</groupId>
                    <artifactId>google-api-services-bigquery</artifactId>
                    <version>${bigquery.api.version}</version>
                </dependency>
                <dependency>
                    <groupId>com.google.cloud</groupId>
                    <artifactId>google-cloud-bigquery</artifactId>
                    <version>${bigquery.version}</version>
                </dependency>
                <dependency>
                    <groupId>com.google.http-client</groupId>
                    <artifactId>google-http-client</artifactId>
                    <version>${bigquery.version}</version>
                </dependency>
                <dependency>
                    <groupId>com.google.http-client</groupId>
